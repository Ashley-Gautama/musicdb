<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Artist</th>

      <th>Title</th>
      <th>Album</th>
      <th>Description</th>
      <th>Cover</th>

      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.artist.name %></td>
        <td><%= song.title %></td>
        <td><%= song.album %></td>
        <td><%= song.description %></td>
        <td ><div class="inline cover">
           <img class="small-cover" src="<%= song.cover %>"/>
        </div></td>
        <td><%= link_to 'Show', artist_song_path(song.artist_id, song) %></td>
        <td><%= link_to 'Back', root_path %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
